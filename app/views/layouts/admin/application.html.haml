!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Silicongroningen"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    / %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href=root_path) Silicon Groningen | Admin
          .container.nav-collapse
            %ul.nav
              / %li= link_to I18n.t('navigation.companies'), companies_path
              / %li= link_to I18n.t('navigation.initiatives'), admin_initiatives_path
              / %li= link_to I18n.t('navigation.persons'), admin_people_path
              / %li= link_to I18n.t('navigation.jobs'), admin_jobs_path

    .container
      .row
        %p.notice= notice
        %p.alert= alert
      %ul.nav.nav-tabs
        %li= link_to I18n.t('navigation.companies'), admin_companies_path, data: {toggle: "tab"}
        %li= link_to I18n.t('navigation.initiatives'), admin_admin_initiatives_path, data: {toggle: "tab"}
        %li= link_to I18n.t('navigation.persons'), admin_admin_people_path, data: {toggle: "tab"}
        %li= link_to I18n.t('navigation.jobs'), admin_admin_jobs_path, data: {toggle: "tab"}
      .row
        .page-header
          =yield :page_header
      .row
        .span12.content
          =yield :main
        / .span3
        /   =yield :sidebar

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
