!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    =airbrake_javascript_notifier
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "grunn.io"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %script{:type => "text/javascript"}
      if (window.location.hash == '#_=_')window.location.hash = '';

    / %link(href="images/favicon.ico" rel="shortcut icon")

  %body
    = render 'shared/taiga-alerts'
    .container
      .account.whole.text-right
        - if account_signed_in? && current_account.is_admin?
          %li= link_to('admin', admin_root_path)
          %li= link_to('sign out', destroy_account_session_path, :method => :delete)
        -elsif account_signed_in?
          %li= link_to("#{current_account.email}", edit_person_path(current_account.person))
          %li= link_to("log uit", destroy_account_session_path, :method => :delete)
          // = link_to("Mijn profiel", account_path(current_account))
        - else
          %li= link_to('Sign in with Facebook', account_omniauth_authorize_path(:facebook))
          %li= link_to('Sign in with Github', account_omniauth_authorize_path(:github))
          %li= link_to('Sign in with Linkedin', account_omniauth_authorize_path(:linkedin))
          %li= link_to('login', new_account_session_path)

      %header.whole
        .logo-frontpage
          =link_to(root_path) do
            =image_tag('logo.png')
        .introduction
          %p Grunn.io is een database vol met internet technologie, van de vruchtbare bodem van Groningen.
        %nav
          %ul
            %li= link_to "bedrijven", companies_path
            %li= link_to "personen", people_path
            %li= link_to "initiatieven", initiatives_path

      = yield :main




    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
