%h2= t "devise.invitations.new.header"
= simple_form_for Account.new, :url => invitation_path('account'), remote: true do |f|
  = devise_error_messages!
  - resource.class.invite_key_fields.each do |field|
    = f.input field
    = f.association :roles, :collection => Role.global, as: :check_boxes if current_account.has_role?(:admin)
  = f.submit t("devise.invitations.new.submit_button"), data: { :'disable-with' => "Verzenden..." }
