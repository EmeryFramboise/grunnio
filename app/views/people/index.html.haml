-content_for :title do
  ="Personen op Grunn.io"

-content_for :main do
  %section.whole.paperpile.personen
    .third
      .title.one
        %i.sweets-people.sweets-large
        %h2{title: 'Personen'} Personen
      %p Personen: Vindt Groningse ondernemers en oprichters of voeg jezelf toe aan de database.
      = link_to new_person_path, class: 'btn large' do
        %i.sweets-plus
        Toevoegen
    .two-thirds
      .title.two
        %i.icon-share-alt.grey-icon.left
        %h3 Alle personen
      %ul.list
        - @people.each do |person|
          %li.list-item= link_to(person.name, person)
