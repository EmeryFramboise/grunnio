= simple_form_for([@initiative], wrapper: :taiga, html: {multipart: true} ) do |f|
  = f.error_notification

  %fieldset
    %legend gegevens
    = f.input :name, required: true
    = f.input :description, input_html: {rows: 10}, required: true
    = f.input :specialities, input_html: {value: @initiative.specialities.join(","), data:{ specialities: Initiative.popular_tags_list } , type: "hidden" }, label: "specialiteiten", hint: "max. 5"
    = f.input :logo, as: :file
    = f.input :logo_cache, as: :hidden
    = f.association :people, :collection => Person.published.all(:order => 'name'), label: "Personen"

  = f.simple_fields_for :card do |c|
    %fieldset
      %legend contact
      = c.input :general_email_address, as: :email
      = c.input :phone, as: :tel
      = c.input :twitter_username
      = c.input :website_url

  = f.simple_fields_for :location do |l|
    %fieldset
      %legend bezoekadres
      = l.input :street_address
      = l.input :postal_code
      = l.input :city
      = l.input :country, priority: ['Netherlands']

    = f.input :published, label: 'Publiceren op Grunn.io?'
  .form-actions
    = f.submit class: 'btn success large'
