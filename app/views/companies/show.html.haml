-content_for :main do
  / %section.whole.breadcumbs
  %section.three-fourths.paperpile
    .imgs
      = image_tag(@company.logo.medium.url, class: 'company-logo')
      = gmaps(map_options: { detect_location: false, center_on_user: false, auto_zoom: false, zoom: 15, :disableDefaultUI => true, container_class:"map_wrapper", language: "nl" },markers: { data: @json })

    .factsheet
      .title.one
        %h2{title: @company.name}= @company.name

      %dl.multiple-table
        %dt Specialiteiten:
        %dd= @company.specialities
        %dt Opgericht in:
        %dd= @company.founded_in
        %dt KvK-nummer:
        %dd= @company.kvk_number
        %dt # werknemers:
        %dd= @company.number_of_employees
        %dt Bio:
        %dd= @company.description
        %dt Adres:
        %dd= @company.location.address
        %dt Corporate site:
        %dd= @company.corporate.nil? ? "-" : @company.corporate
        %dt Blog:
        %dd= @company.blog

      - if current_account.try(:can_update?, @company)
        = link_to "aanpassen", edit_company_path(@company), class: 'btn'
      - if current_account.try(:can_delete?, @company)
        = link_to "verwijderen", company_path(@company), :confirm => 'weet je het zeker?', :method => :delete, class: 'btn'

  %section.sidebar.fourth.paperpile
    %p= "Grunn.io is een database vol met internet technologie, van de vruchtbare bodem van Groningen. Maak kennis met bedrijven als #{Company.all.sample.name} en de personen achter #{Company.all.sample.name}, voeg zelf gegevens toe of lees het laatste nieuws."

