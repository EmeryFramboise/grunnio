= simple_form_for([@company], :defaults => { :input_html => { :class => 'span4' } }) do |f|
  = f.error_notification

  .form-inputs.well
    %legend gegevens
    = f.input :name
    = f.input :description, input_html: {rows: 10}

    = f.input :categories, input_html: {value: @company.categories.join(","), data:{ categories: Company.popular_tags_list } , type: "hidden" }

    / = f.input :category

    = f.input :founded_in, :input_html => { :class => 'span1' }
    = f.input :number_of_employees, :input_html => { :class => 'span1' }
    = f.input :kvk_number, :input_html => { :class => 'span1' }

  = f.simple_fields_for :products do |product|
    = render 'product_fields', f: product
  .links
    = link_to_add_association "Add product", f, :products

  = f.simple_fields_for :card do |c|
    .form-inputs.well
      %legend contact
      = c.input :general_email_address, as: :email
      = c.input :phone, as: :tel

      = c.input :twitter_username, :wrapper => :prepend, :label => false do
        = content_tag :span, "@", :class => "add-on", :style => 'margin-right: -5px;'
        = c.input_field :twitter_username
      / = c.input :twitter_username, maxlength: :lookup
      = c.input :website_url, :wrapper => :prepend, :label => false, as: :url do
        = content_tag :span, "http://", :class => "add-on", :style => 'margin-right: -5px;'
        = c.input_field :website_url

  = f.simple_fields_for :location do |l|
    .form-inputs.well
      %legend bezoekadres
      = l.input :street_address
      / = l.input :extended_address
      = l.input :postal_code
      = l.input :city
      / = l.input :locality
      / = l.input :region
      = l.input :country, priority: ['Netherlands']

  .form-actions
    = f.button :wrapped, cancel: companies_path, class: 'btn-large'
