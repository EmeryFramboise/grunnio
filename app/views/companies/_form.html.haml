= simple_form_for([@company], wrapper: :taiga, :html => {:multipart => true} ) do |f|
  = f.error_notification

  %fieldset
    %legend gegevens
    = f.input :name
    = f.input :kvk_number, as: :integer, input_html: {class: 'fourth'}, hint: '8-cijferig KvK nummer', required: true
    = f.input :description, input_html: {rows: 10}, required: true
    = f.input :logo, as: :file
    = f.input :logo_cache, as: :hidden
    = f.input :specialities, input_html: {value: @company.specialities.join(","), data:{ specialities: Company.popular_tags_list } , type: "hidden" }
    = f.input :founded_in, input_html: {class: 'fourth'}
    = f.input :number_of_employees, as: :integer, input_html: {class: 'fourth'}

  / = f.simple_fields_for :products do |product|
  /   = render 'product_fields', f: product
  / .links
  /   = link_to_add_association "Product toevoegen", f, :products, class: 'btn'

  = f.simple_fields_for :card do |c|
    %fieldset
      %legend contact
      = c.input :general_email_address, as: :email
      = c.input :phone, as: :tel
      = c.input :twitter_username
      = c.input :website_url

  = f.simple_fields_for :location do |l|
    %fieldset
      %legend bezoekadres
      = l.input :street_address
      = l.input :postal_code
      = l.input :city
      = l.input :country, priority: ['Netherlands']

  .form-actions
    = f.submit class: 'btn'
